{
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "jsdoc-format": [
            true,
            "check-multiline-start"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "trailing-comma": [
            true,
            "never"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "prefer-const": true,
        "eofline": true
    }
}