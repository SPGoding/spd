{
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "jsdoc-format": [
            true,
            "check-multiline-start"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "trailing-comma": [
            true,
            "never"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "no-magic-numbers": [
            true,
            -1,
            0,
            1,
            2
        ],
        "ordered-imports": [
            true
        ],
        "max-line-length": [
            true,
            100
        ],
        "eofline": true
    }
}
