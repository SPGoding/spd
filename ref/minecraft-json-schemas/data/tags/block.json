{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://raw.githubusercontent.com/Levertion/minecraft-json-schemas/master/java/data/tags/block.json",
    "type": "object",
    "title": "根标签。",
    "additionalProperties": false,
    "properties": {
        "replace": {
            "type": "boolean",
            "title": "如果为 true，该标签会完全替换掉更低优先级的数据包中定义的相同标签的方块。"
        },
        "values": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "../../shared/block_name.json",
                        "description": "一个方块 ID。"
                    },
                    {
                        "$ref": "../../shared/tag_location.json",
                        "description": "一个方块标签。"
                    }
                ]
            },
            "title": "一系列方块。"
        }
    }
}